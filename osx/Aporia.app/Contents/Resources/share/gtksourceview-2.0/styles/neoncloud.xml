<style-scheme id="neoncloud" _name="Neon Cloud" version="1.0">
  <author>filwit</author>
  <_description>Soft blue background with neon accents.</_description>

  <!-- Colors -->
  <color name="default"       value="#2f4668"/>
  <color name="background"    value="#d7e6f7"/>
  <color name="current-line"  value="#cfdeef"/>
  <color name="line-numbers"  value="#8080c0"/>
  <color name="search-match"  value="#ffff00"/>
  <color name="error"         value="#ff0000"/>

  <color name="types"      value="#0080c0"/>
  <color name="comment"    value="#8080c0"/>
  <color name="keyword"    value="#000"/>
  <color name="literal"    value="#ff0080"/>

  <color name="pragma"     value="#0f2648"/> <!-- 400000 -->

  <!-- GUI styles -->
  <style name="text" foreground="default" background="background"/>
  <style name="selection" foreground="background" background="keyword"/>
  <style name="selection-unfocused" foreground="background" background="keyword"/>
  <style name="cursor" foreground="default" bold="true"/>
  <style name="secondary-cursor" foreground="default" bold="true"/>
  <style name="current-line" background="current-line"/>
  <style name="line-numbers" foreground="line-numbers" background="current-line"/>
  <style name="bracket-match" foreground="types" background="background" bold="true"/>
  <style name="bracket-mismatch" foreground="default" background="error" bold="true"/>
  <style name="search-match" foreground="background" background="search-match"/>

  <!-- Default styles -->
  <style name="doc-comment" foreground="comment"/>

  <style name="def:keyword" foreground="keyword" bold="true"/>
  <style name="def:module-handler" foreground="default" bold="true"/>
  <style name="def:statement" foreground="default" bold="true"/>
  <style name="def:function" foreground="default" bold="true"/>
  <style name="def:preprocessor" foreground="keyword"/>
  <style name="def:type" foreground="types"/>

  <style name="def:character" foreground="literal"/>
  <style name="def:comment" foreground="comment" italic="true"/>
  <style name="def:number" foreground="literal"/>
  <style name="def:string" foreground="literal"/>
  <style name="def:net-address-in-comment" foreground="literal" underline="true"/>
  <style name="def:note" foreground="comment" bold="true"/>
  <style name="def:error" background="error" bold="true"/>
  <style name="def:escape" foreground="keyword"/>
  <style name="def:shebang" foreground="#00c99b" bold="true"/>
  <style name="def:doc-comment-element" italic="false"/>
  <style name="def:identifier" foreground="keyword"/>

  <style name="def:specials" foreground="default"/>

  <style name="def:variable" foreground="#9DD5F1"/>
  <style name="def:boolean" foreground="literal"/>
  <style name="def:constant" foreground="literal"/>
  <style name="def:special-constant" foreground="default"/>

  <!-- Language styles -->
  <style name="nim:pascal" foreground="types"/>
  <style name="nim:typedecl" foreground="types" bold="true"/>
  <style name="nim:procdecl" foreground="types" bold="true"/>
  <style name="nim:operator" foreground="pragma"/>
  <style name="nim:bracket" foreground="keyword"/>
  <style name="nim:pragma" foreground="types"/>
  <style name="nim:call" foreground="pragma"/>

</style-scheme>
